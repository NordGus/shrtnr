{{ define "error_toast" }}
    <div id="toasts" hx-swap-oob="beforeend">
        <div class="drop-shadow-lg rounded text-neutral-100">
            <div class="bg-red-500 p-2 rounded-t">
                <p class="text-xl font-medium">{{ . }}</p>
            </div>
            <parent-destroyer class="bg-red-600 hover:bg-red-700 p-2 rounded-b flex justify-center cursor-pointer">
                <span>Clear</span>
            </parent-destroyer>
        </div>
    </div>
{{ end }}
